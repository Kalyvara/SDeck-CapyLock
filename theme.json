                },
                "Orange": {
                    "--capylock-profile-bg": [
                        "#9c3b1e"
                    ]
                },
                "⚙️ Gradient...": {
                    "cl_profile_gradient.css": []
                }
            },
            "components": [
                {
                    "name": "Gradient Color 1",
                    "type": "color-picker",
                    "on": "⚙️ Gradient...",
                    "default": "#34c58e",
                    "css_variable": "capylock-profile-bg-grad1",
                    "tabs": []
                },
                {
                    "name": "Gradient Color 2",
                    "type": "color-picker",
                    "on": "⚙️ Gradient...",
                    "default": "#2e5f80",
                    "css_variable": "capylock-profile-bg-grad2",
                    "tabs": []
                }
            ]
        },
        "Empty Indicators": {
            "type": "dropdown",
            "default": "White",
            "values": {
                "White": {
                    "--capylock-digit-empty": [
                        "#fff"
                    ]
                },
                "Black": {
                    "--capylock-digit-empty": [
                        "#000"
                    ]
                },
                "⚙️ Custom...": {}
            },
            "components": [
                {
                    "name": "Color Picker",
                    "type": "color-picker",
                    "on": "⚙️ Custom...",
                    "default": "#eee",
                    "css_variable": "capylock-digit-empty",
                    "tabs": []
                }
            ]
        },
        "Filled Indicators": {
            "type": "dropdown",
            "default": "White",
            "values": {
                "White": {
                    "--capylock-digit-fill": [
                        "#fff"
                    ]
                },
                "Black": {
                    "--capylock-digit-fill": [
                        "#000"
                    ]
                },
                "⚙️ Custom...": {}
            },
            "components": [
                {
                    "name": "Color Picker",
                    "type": "color-picker",
                    "on": "⚙️ Custom...",
                    "default": "#eee",
                    "css_variable": "capylock-digit-fill",
                    "tabs": []
                }
            ]
        },
        "Hide Empty Indicators": {
            "type": "checkbox",
            "default": "No",
            "values": {
                "Yes": {
                    "cl_opt_indicators.css": []
                },
                "No": {}
            }
        },
        "Container Edges": {
            "type": "slider",
            "default": "Sharp",
            "values": {
                "Sharp": {
                    "--capylock-container-roundRadius": [
                        "0"
                    ]
                },
                "Round": {
                    "--capylock-container-roundRadius": [
                        "18px"
                    ]
                }
            }
        }
    }
}